<h2>{{post.title}}</h2>
<p>{{post.author}}</p>
<p>{{post.date}}</p>
<img src={{post.image}} alt="featured-image"/>
{{#if isContentShowing }}
   <p {{action 'contentHide'}}>{{post.content}}</p>
 {{else}}
   <button {{action 'contentShow'}}>Show Post Content</button>
{{/if}}
{{update-post post=post update="update"}}
<p>{{post.tags}}</p>
<button {{action 'delete' post}}>Delete Post</button>
