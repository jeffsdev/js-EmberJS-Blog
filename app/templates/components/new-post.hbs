{{#if addNewPost}}
  <h1>New Post</h1>
    <div>
      <form>
        <fieldset class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="content">Content</label>
          {{textarea value=content id="content" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="tags">Tags</label>
          {{input value=tags id="tags" class="form-control"}}
        </fieldset>

        <button class="btn btn-default" {{action 'savePost'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button class="btn btn-default" {{action 'postFormShow'}}>New Post</button>
{{/if}}
