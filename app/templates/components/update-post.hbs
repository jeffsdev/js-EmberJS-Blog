{{#if updatePostForm}}
  <h4>Update {{post.title}}</h4>
    <div>
      <form>
        <fieldset class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=post.title class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=post.author class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=post.date class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="image">Image</label>
          {{input value=image id="image" placeholder=post.image class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=post.content class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="tags">Tags</label>
          {{input value=tags id="tags" placeholder=post.tags class="form-control"}}
        </fieldset>

        <button class="btn btn-default" {{action 'update' post}}>Save</button>
      </form>
    </div>
    {{else}}
      <button class="btn btn-default" {{action 'updatePostForm'}}>Update</button>
    {{/if}}
