{{#if updateCommentForm}}
  <h1>Update Comment</h1>
    <div>
      <form>
        <fieldset class="form-group">
          <label for="user">User Name</label>
          {{input value=user id="user" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="commentary">Your Comment:</label>
          {{input value=commentary id="commentary" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="avatar">Avatar</label>
          {{input value=avatar id="avatar" class="form-control"}}
        </fieldset>

        <button class="btn btn-default" {{action 'updateComment' comment}}>Save</button>
      </form>
    </div>
  {{else}}
  <button class="btn btn-default" {{action 'updateCommentForm'}}>Update</button>
{{/if}}
