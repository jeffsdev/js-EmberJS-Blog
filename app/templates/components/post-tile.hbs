{{#each sortedPosts as |post|}}
  <div class="post">
    <h2>{{#link-to 'post' post.id}}{{post.title}}{{/link-to}}</h2>
    <div class="post-meta">
      <p><span>Author:</span> {{post.author}}</p>
      <p><span>Date:</span> {{post.date}}</p>
      <p><span>Tags:</span> {{post.tags}}</p>
    </div>
    <img src={{post.image}} alt="featured-image"/>
    {{#if isContentShowing }}
       <p {{action 'contentHide'}}>{{post.content}}</p>
     {{else}}
     <!-- <div class="preview-text">
       <div class="fade">
       </div>
       {{post.content}}

     </div> -->
       <!-- <button class="btn btn-default" {{action 'contentShow'}}>Show Post Content</button> -->
       {{#link-to 'post' post.id class="read-more"}}Read More..{{/link-to}}
    {{/if}}
  </div>
  {{/each}}
