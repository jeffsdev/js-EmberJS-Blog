{{#if updateCommentForm}}
  <h1>Update Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">User Name</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="commentary">Your Comment:</label>
          {{input value=commentary id="commentary"}}
        </div>

        <div class="form-group">
          <label for="avatar">Avatar</label>
          {{input value=avatar id="avatar"}}
        </div>

        <button {{action 'updateComment' comment}}>Save</button>
      </form>
    </div>
  {{else}}
  <button {{action 'updateCommentForm'}}>Update</button>
{{/if}}
