{{#if updateCommentForm}}
  <h1>Update Comment</h1>
    <div>
      <form class="comment-update">
        <fieldset class="form-group">
          <label for="user">User Name</label>
          {{input value=user id="user" placeholder=comment.user class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=comment.date class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="commentary">Your Comment:</label>
          {{textarea value=commentary placeholder=comment.commentary id="commentary" class="form-control"}}
        </fieldset>

        <fieldset class="form-group">
          <label for="avatar">Avatar</label>
          {{input value=avatar placeholder=comment.avatar id="avatar" class="form-control"}}
        </fieldset>

        <button class="btn btn-default save" {{action 'updateComment' comment}}>Save</button>
      </form>
    </div>
  {{else}}
  <button class="btn btn-default update" {{action 'updateCommentForm'}}>Edit Comment</button>
{{/if}}
